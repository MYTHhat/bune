#Servisi oluşturmak için: "sudo touch /etc/systemd/system/servisinator.service"

#Servisi düzenlemek için: "sudo nano /etc/systemd/system/servisinator.service"

[Unit]
Description=Monitor directory and update database

[Service]
Type=simple
ExecStart=/home/ahmet/myscript

[Install]
WantedBy=multi-user.target



#Servisi aktif etmek için: "systemctl enable servisadi.service"

#Servisi durdurmak için: "systemctl stop servisinator.service"
